obj = bld.new_task_gen('cxx', 'program')
obj.source = 'spidermonkey.cpp'
obj.target = 'spidermonkey'
obj.install_path = None
obj.uselib = 'JS JS_H'
obj.includes = ['../include']

obj = bld.new_task_gen('cxx', 'program')
obj.source = 'abstract-js.cpp'
obj.target = 'abstract-js'
obj.install_path = None
obj.uselib = 'BOOST JS_H'
obj.uselib_local = ['flusspferd']
if bld.env['ENABLE_IO']:
  obj.uselib_local += ['flusspferd-io']
obj.includes = ['../include']

obj = bld.new_task_gen('cxx', 'program')
obj.source = 'jsrepl.cpp'
obj.target = 'jsrepl'
obj.install_path = None
obj.uselib = 'BOOST JS_H'
obj.uselib_local = ['flusspferd']
if bld.env['ENABLE_IO']:
  obj.uselib_local += ['flusspferd-io']
if bld.env['ENABLE_XML']:
  obj.uselib_local += ['flusspferd-xml']
obj.includes = ['../include']
