import sys
darwin = sys.platform.startswith('darwin')

libtype = 'shlib'

obj = bld.new_task_gen('cxx', libtype)
obj.find_sources_in_dirs('. spidermonkey')
obj.includes = ['../include']
obj.uselib = 'JS JS_H BOOST_THREAD BOOST'
obj.target = 'flusspferd'

obj = bld.new_task_gen('cxx', libtype)
obj.find_sources_in_dirs('io')
obj.includes = ['../include']
obj.uselib_local = 'flusspferd'
obj.uselib = 'JS_H BOOST'
obj.target = 'flusspferd-io'

obj = bld.new_task_gen('cxx', libtype)
obj.find_sources_in_dirs('xml')
obj.includes = ['../include']
obj.uselib_local = 'flusspferd'
obj.uselib = 'LIBXML2 JS_H BOOST'
obj.target = 'flusspferd-xml'

if bld.env['ENABLE_TESTS']:
  obj = bld.new_task_gen('cxx', libtype)
  obj.find_sources_in_dirs('. spidermonkey')
  obj.includes = ['../include']
  obj.uselib = 'GCOV JS JS_H BOOST_THREAD BOOST'
  obj.target = 'flusspferd-coverage'
  obj.install_path = None
